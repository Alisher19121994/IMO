<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10sp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImage_id"
                android:layout_width="60sp"
                android:layout_height="60sp"
                android:adjustViewBounds="true"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/holland"
                app:shapeAppearanceOverlay="@style/circle" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="15dp"
                android:layout_height="15sp"
                android:visibility="gone"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="5sp"
                android:background="@drawable/oval"
                android:padding="2sp">

                <TextView
                    android:id="@+id/count_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1000"
                    android:visibility="visible"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="1dp"
                    android:textColor="@color/black"
                    android:textSize="7sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fullname_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:text="Alisher Daminov"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:text="12:34 PM"
                    android:textSize="17sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/material_motion_duration_long_1"
                    android:text="last seen recently"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12sp"
                    android:src="@drawable/baseline_mic_none_24" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>